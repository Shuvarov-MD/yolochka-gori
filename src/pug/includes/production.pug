.production.section
  .container
    h2.title.title--center.production__title Наше производство
    .production__wrap
      svg.icon.icon--left.production__icon
        use(xlink:href="./img/sprite.svg#arrow-left")
      .production__content
        figure.figure
          picture.picture.production__picture
            source(srcset="./img/production/production-1/production-1.webp, ./img/production/production-1/production-1@2x.webp 2x", type="image/webp", class="img")
            img(src="#", alt="Контроль качества продукции", srcset="./img/production/production-1/production-1.jpg, ./img/production/production-1/production-1@2x.jpg 2x", class="img")
          figcaption.figcaption Контроль качества продукции
        figure.figure
          picture.picture.production__picture
            source(srcset="./img/production/production-2/production-2.webp, ./img/production/production-2/production-2@2x.webp 2x", type="image/webp", class="img")
            img(src="#", alt="Пример выкладки", srcset="./img/production/production-2/production-2.jpg, ./img/production/production-2/production-2@2x.jpg 2x", class="img")
          figcaption.figcaption Пример выкладки
        figure.figure
          picture.picture.production__picture
            source(srcset="./img/production/production-3/production-3.webp, ./img/production/production-3/production-3@2x.webp 2x", type="image/webp", class="img")
            img(src="#", alt="Сопутствующие товары", srcset="./img/production/production-3/production-3.webp, ./img/production/production-3/production-3@2x.webp 2x", class="img")
          figcaption.figcaption Сопутствующие товары
      svg.icon.icon--right.production__icon
        use(xlink:href="./img/sprite.svg#arrow-right")